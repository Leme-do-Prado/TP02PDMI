<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.TaskAddingPage"
             Title="TaskAddingPage">

    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="titleEntry" Placeholder="Título" Margin="10"/>
            <Entry x:Name="descriptionEntry" Placeholder="Descrição" Margin="10"/>
            <DatePicker x:Name="creationDatePicker" Margin="10"/>
            <Picker x:Name="priorityPicker" Title="Prioridade" Margin="10">
                <Picker.ItemsSource>
                    <x:String>Alta</x:String>
                    <x:String>Média</x:String>
                    <x:String>Baixa</x:String>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Adicionar Tarefa" Clicked="OnAddButtonClicked" HorizontalOptions="CenterAndExpand" Margin="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>