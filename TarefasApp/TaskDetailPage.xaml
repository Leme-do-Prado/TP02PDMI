<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.TaskDetailPage">

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Detalhes da Tarefa" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="10"/>
            <Label Text="Título:" FontSize="Medium" Margin="10"/>
            <Label Text="{Binding taskTitle}" Margin="10"/>
            <Label Text="Descrição:" FontSize="Medium" Margin="10"/>
            <Label Text="{Binding taskDescription}" Margin="10"/>
            <Label Text="Data de Criação:" FontSize="Medium" Margin="10"/>
            <Label Text="{Binding CreationDate}" Margin="10"/>
            <Label Text="Prioridade:" FontSize="Medium" Margin="10"/>
            <Label Text="{Binding Priority}" Margin="10"/>
            <Button Text="Editar" Clicked="OnEditButtonClicked" HorizontalOptions="CenterAndExpand" Margin="10"/>
            <Button Text="Excluir" Clicked="OnDeleteButtonClicked" HorizontalOptions="CenterAndExpand" Margin="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
