<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.MainPage">

    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="taskListView" ItemTapped="OnTaskItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding taskTitle}" />
                                <Label Text="{Binding taskDescription}" />
                                <Label Text="{Binding Priority}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Adicionar Tarefa" Clicked="OnAddTaskButtonClicked" HorizontalOptions="StartAndExpand" Margin="10"/>
        </StackLayout>
    </ContentPage.Content>


</ContentPage>
